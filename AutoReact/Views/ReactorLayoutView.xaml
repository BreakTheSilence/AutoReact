<Page x:Class="AutoReact.Views.ReactorLayoutView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReact.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReactorLayoutView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="8" Background="DarkCyan">
            <TextBlock Text="Comming soon..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="1">
            <Button Content="Set first part" Margin="10, 5" Click="ReactorSetFirstPartButton"/>
            <Button Content="Set second part" Margin="10, 5" Click="ReactorSetSecondPartButton"/>
        </StackPanel>
    </Grid>
</Page>
